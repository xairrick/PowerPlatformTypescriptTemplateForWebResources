{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "module": "es6",
    "outDir": "./abc_/scripts",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES2017"
  },
  "include": ["./src/code/**/*"]
}